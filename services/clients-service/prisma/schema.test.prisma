generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client" 
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") 
}

model Client {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String?
  status    String   @default("ACTIVE")
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
